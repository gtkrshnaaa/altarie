# altarie.js example environment variables
# Application
APP_PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# CORS (comma-separated for multiple origins). Example for production:
# CORS_ORIGIN=https://yourdomain.com,https://admin.yourdomain.com
CORS_ORIGIN=

# Trust reverse proxy / ingress (true|false)
TRUST_PROXY=false

# Rate limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=300
RATE_LIMIT_WINDOW=1 minute
# Allowlist IPs (comma-separated), e.g. 127.0.0.1,10.0.0.0/8
RATE_LIMIT_ALLOWLIST=

# Trust reverse proxy / ingress (true|false)
TRUST_PROXY=false

# Rate limiting (optional)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX=300
RATE_LIMIT_WINDOW=1 minute
# Allowlist IPs (comma-separated), e.g. 127.0.0.1,10.0.0.0/8
RATE_LIMIT_ALLOWLIST=

# Admin & Auth
COOKIE_SECRET=change-me-in-production
ADMIN_NAME=Administrator
ADMIN_EMAIL=admin@altarie.local
ADMIN_PASSWORD=admin123
ADMIN_SALT=
