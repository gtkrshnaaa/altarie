{% block content %}
  <h1>Admin Login</h1>
  {% if error %}
    <p class="muted" style="color:#c64281"><strong>{{ error }}</strong></p>
  {% endif %}
  <form method="post" action="/admin/login" class="card" style="padding:1rem; max-width:24rem">
    <div style="display:flex; flex-direction:column; gap:.5rem">
      <label>Email
        <input type="email" name="email" required style="width:100%; padding:.6rem; border:1px solid var(--border); border-radius:8px" />
      </label>
      <label>Password
        <input type="password" name="password" required style="width:100%; padding:.6rem; border:1px solid var(--border); border-radius:8px" />
      </label>
      <button type="submit" class="btn btn-primary">Sign in</button>
    </div>
  </form>
{% endblock %}
